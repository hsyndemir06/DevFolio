@model List<DevFolio.Models.TblProject>

@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>ProjectList</h2>

<table class="table table-bordered">
    <tr>
        <th>id</th>
        <th>projeBasligi</th>
      
        <th>Proje Categorisi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ProjectID</td>
            <td>@x.Title</td>
                 
            <td>@x.TblCategory.CategoryName</td>         
            <td><a href="/Project/DeleteProject/@x.ProjectID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Project/UpdateProject/@x.ProjectID" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Project/AddProject/" class="btn btn-info">Yeni Proje Ekle</a>